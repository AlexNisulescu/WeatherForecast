<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ChoiceBox fx:id="countryBox" layoutX="100.0" layoutY="85.0" prefWidth="150.0" onAction="#countrySelected"/>
      <Label layoutX="50.0" layoutY="88.0" text="Country" />
      <Label layoutX="320.0" layoutY="88.0" text="City" />
      <ChoiceBox fx:id="cityBox" layoutX="350.0" layoutY="85.0" prefWidth="150.0" onAction="#citySelected"/>
      <Label layoutX="225.0" layoutY="28.0" prefHeight="44.0" prefWidth="150.0" text="Weather Forecast App">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="160.0" layoutY="120.0" text="Search for the city you want if it's not in the choice box:" />
      <TextField fx:id="textField" layoutX="226.0" layoutY="143.0" onKeyPressed="#buttonPressed" />
   </children>
</AnchorPane>
